{
    "compilerOptions": {
        "skipLibCheck": true,
        "target": "es2017",
        "module": "es6",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "typeRoots": [
            "./src/typings"
        ],
        "plugins": [
            {
                "name": "typescript-plugin-css-modules"
            }
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
